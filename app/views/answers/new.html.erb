<%= title "Make a new attempt!" %>

<div class="container comment-form">
   <div class="row">
      <%= form_for @answer, :url => course_challenge_answers_path(@course, @challenge), html: {class: "comment-form"} do |f| %>

      <div class="form-group">
         <h2>
            <%= f.label @challenge.question %>
         </h2>
         <%= f.text_area :attempt, class: 'form-control' %>
      </div>

	    <div class="col-xs-12">
	       <%= f.button :submit, class:'button button-default', 'data-text': 'SUBMIT' do %>
		  <span>SUBMIT</span>
	       <% end %>
	    </div>

      <% end %>
   </div>
</div>
