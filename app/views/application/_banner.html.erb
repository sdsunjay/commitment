<!-- Page breadcrumb -->
<section id="mu-page-breadcrumb">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mu-page-breadcrumb-area">
          <h2><%= yield :title %></h2>
          <ol class="breadcrumb">
            <li><%= link_to 'Home', root_path %></li>
            <% if params[:controller] == 'courses' %>
                <li>Courses</li>
            <% end %>
            <li class='active'><%= yield :title %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End breadcrumb -->
