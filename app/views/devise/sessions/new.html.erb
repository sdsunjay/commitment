<%= title "Sign In" %>

<%= render 'partials/alerts' %>

<section>
  <div class='container'>
    <div class='row'>
      <div class='col-lg-offset-3 col-md-offset-2 col-lg-6 col-md-8 col-sm-12'>
        <br/>
        <div class='textcenter'>
          <h4>
            To access your posts please login in your account.
          </h4>
        </div><!-- end .textcenter -->
      </div><!-- end .col-xs-12 -->
      <div class='col-lg-offset-3 col-md-offset-2 col-lg-6 col-md-8 col-sm-12'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "comment-form"}) do |f| %>
          <div class='form-group'>
          <%= f.email_field :email, autofocus: true, placeholder: 'Please Enter Your Email', class: 'form-control' %>
          </div><!-- end .form-group -->

          <div class='form-group'>
            <%= f.password_field :password, autocomplete: 'off', placeholder: 'Please Enter Your Password', class: 'form-control' %>
          </div><!-- end .form-group -->

          <% if devise_mapping.rememberable? -%>
          <div class='checkbox'>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <%= f.button :submit, class:'button button-default', 'data-text': 'LOG IN' do %>
          <span>LOG IN</span>
          <% end %>
        <% end %>
      </div><!-- end .col-lg-offset-3 .col-md-offset-2 .col-lg-6 .col-md-8 .col-sm-12 --> 
    </div><!-- end .row --> 
    <div class="row">
      <div class='col-lg-offset-2 col-md-offset-1 col-lg-8 col-md-10 col-sm-12'>
        <%= render 'devise/shared/links' %>
      </div>
    </div><!-- end .row --> 
  </div><!-- end .container --> 
</section>
